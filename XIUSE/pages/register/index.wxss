/* pages/login/index.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.logo{
  padding: 80rpx 0;
  display: flex;
  justify-content: space-between;
}
.wrapper{
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item-img{
  width: 300rpx;
  height: 300rpx;
}
.avator{
  width: 32rpx;
  height: 32rpx;
  vertical-align: baseline;
}
.image-box{
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
}
.box{
  width: 70%;
  margin: 0 auto;
}
.avator_box{
  flex: 0 0 46rxp;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.user,.pass{
  display: flex;
  padding: 18rpx 40rpx;
  background: #fff;
  margin-bottom: 10rpx;
  border-radius:8rpx;
}
.input_c{
    padding-left: 20rpx;
     font-size: 28rpx;  
    flex: 1 1 auto;
}
 .phcolor{
    color: #000; 
    font-size: 28rpx;
     line-height: 28rpx;
    font-weight: 400;  
    font-family:UICTFontTextStyleBody;
}
.find_pass{
  text-align: right;
  font-size: 24rpx;
  padding: 15rpx 10px;
  color: #2A2D32;
}

.login_btn{
  width: 100%;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 28rpx;
}
.code_box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.other-button-hover{
  background-color: #42929D;
  opacity: 0.8;
}
.code-other{
    background-color: #fff;
  opacity: 0.8;
}
.code_btn{
  padding: 0;
  border: 1px solid #42929D;
  background: #fff;
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20rpx;
}
.code_btn text{
  color: #42929D;
}
.login_btn{
  background: #42929D;
  color: rgba(82,93,94,0.24);
  box-shadow: 0 8px 10px 0;
}
.login_btn text{
  color: #fff;
}
.wechat_login{
  width: 100%;
  padding-bottom: 150rpx;
  display: flex;
  justify-content: space-between;
}
.wechat_inner{
  display: flex;
  justify-content: space-between;
  border: 1px solid #51C95C;
  border-radius: 40rpx;
  width: 50%;
  margin: 0 auto;
  padding: 10rpx 30rpx;
}
.text_box{
  display: flex;
}
.wechat_logo{
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
}
.wechat_text{
  line-height: 40rpx;
  vertical-align: top;
  color: #51C95C;
  margin-left: 10rpx;
  font-size: 28rpx;
}