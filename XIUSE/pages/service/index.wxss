/* pages/service/index.wxss */
.cantainer{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info{
  padding: 20rpx 20rpx 60rpx 20rpx;
  display: flex;
  justify-content: space-between;
  background: #42929D;
}
.avator{
  display: flex;
}
.avator_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  padding: 20rpx;
}
.avator_name,.seting{
display: flex;
flex-direction: column;
justify-content: space-between;
}
.avator_name text,.seting text {
    font-size: 32rpx;
    line-height: 80rpx;
    font-family: PingFangSC-Medium;
    color: #FFFFFF;
}
.box{
  flex: 1 1 auto;
  background: #f7f7f7;
}
.box_inner{
  position: absolute;
  top: 120rpx;
  left: 0;
  width: 100%;
  height: 100%;

}
.wrapper{
  width: 100%;
  height: 100%;
}
.wrapper_inner{
   margin: 0 auto;
    width: 90%;
  height: 100%;
}
.top_header{
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx 0;
}
.top_header text{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #484E5B;
}